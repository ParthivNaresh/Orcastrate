# Docker Environment
# Configuration for Docker Compose development stack

APP_NAME=Orcastrate-Docker
ENVIRONMENT=docker
DEBUG=false
API_HOST=0.0.0.0
API_PORT=8000

# Security
SECRET_KEY=docker-secret-key
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# Docker service hostnames
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=orcastrate
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres

MONGODB_URL=mongodb://mongodb:27017
MONGODB_DB=orcastrate

REDIS_URL=redis://redis:6379
REDIS_DB=0

MYSQL_HOST=mysql
MYSQL_PORT=3306
MYSQL_DB=orcastrate
MYSQL_USER=root
MYSQL_PASSWORD=mysql

# Docker testing
TEST_POSTGRES_HOST=postgres
TEST_POSTGRES_PORT=5432
TEST_POSTGRES_DB=orcastrate_test
TEST_POSTGRES_USER=postgres
TEST_POSTGRES_PASSWORD=postgres

# LocalStack in Docker
USE_LOCALSTACK=true
LOCALSTACK_ENDPOINT=http://localstack:4566

# Feature flags
ENABLE_LLM_FEATURES=false
ENABLE_LIVE_TESTING=true
ENABLE_MULTICLOUD=true
ENABLE_TERRAFORM=true
ENABLE_KUBERNETES=false

# Docker logging
LOG_LEVEL=INFO
LOG_FORMAT=json
ENABLE_METRICS=true
ENABLE_TRACING=false

# Mock AWS for LocalStack
AWS_DEFAULT_REGION=us-west-2
AWS_ACCESS_KEY_ID=test
AWS_SECRET_ACCESS_KEY=test
