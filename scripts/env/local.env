# Local Development Environment
# This file contains safe defaults for local development

APP_NAME=Orcastrate
ENVIRONMENT=development
DEBUG=true
API_HOST=0.0.0.0
API_PORT=8000

# Security (development only - change in production)
SECRET_KEY=dev-secret-key-not-for-production
CORS_ORIGINS=http://localhost:3000,http://localhost:8000,http://127.0.0.1:3000

# Local database defaults
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=orcastrate_dev
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres

MONGODB_URL=mongodb://localhost:27017
MONGODB_DB=orcastrate_dev

REDIS_URL=redis://localhost:6379
REDIS_DB=0

# Local testing
TEST_POSTGRES_HOST=localhost
TEST_POSTGRES_PORT=5433
TEST_POSTGRES_DB=orcastrate_test
TEST_POSTGRES_USER=postgres
TEST_POSTGRES_PASSWORD=postgres

# Feature flags for development
ENABLE_LLM_FEATURES=false
ENABLE_LIVE_TESTING=false
USE_LOCALSTACK=true
LOCALSTACK_ENDPOINT=http://localhost:4566

# Development logging
LOG_LEVEL=DEBUG
LOG_FORMAT=text
ENABLE_METRICS=true
ENABLE_TRACING=false

# AWS (use LocalStack for development)
AWS_DEFAULT_REGION=us-west-2
AWS_ACCESS_KEY_ID=test
AWS_SECRET_ACCESS_KEY=test