# Testing Environment
# Configuration for unit and integration tests

APP_NAME=Orcastrate-Test
ENVIRONMENT=testing
DEBUG=false
API_HOST=127.0.0.1
API_PORT=8001

# Security
SECRET_KEY=test-secret-key
CORS_ORIGINS=http://localhost:3000,http://localhost:8001

# Test databases
POSTGRES_HOST=localhost
POSTGRES_PORT=5433
POSTGRES_DB=orcastrate_test
POSTGRES_USER=postgres
POSTGRES_PASSWORD=test

MONGODB_URL=mongodb://localhost:27018
MONGODB_DB=orcastrate_test

REDIS_URL=redis://localhost:6380
REDIS_DB=1

# Testing settings
ENABLE_LIVE_TESTING=false
LIVE_TEST_TIMEOUT=120
USE_LOCALSTACK=true
LOCALSTACK_ENDPOINT=http://localhost:4566

# Feature flags for testing
ENABLE_LLM_FEATURES=false
ENABLE_MULTICLOUD=true
ENABLE_TERRAFORM=true
ENABLE_KUBERNETES=true

# Test logging
LOG_LEVEL=WARNING
LOG_FORMAT=text
ENABLE_METRICS=false
ENABLE_TRACING=false

# Mock AWS credentials for testing
AWS_DEFAULT_REGION=us-west-2
AWS_ACCESS_KEY_ID=test-key
AWS_SECRET_ACCESS_KEY=test-secret

# Planning limits for tests
MAX_PLAN_STEPS=50
MAX_PLANNING_TIME=60